<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="infotech.atom.com.creativejewel.Category_Listing">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/normal_actionbar" />

        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:text="Shop By Categories"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridView
            android:id="@+id/categories"
            android:layout_below="@+id/banner"
            android:numColumns="2"
            android:columnWidth="100dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>

        <ScrollView

            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/ring"
                        android:layout_weight="1"
                        android:text="rings"
                        android:textSize="12sp"
                        android:background="#998100"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />
                    <Button
                        android:id="@+id/necklace"
                        android:layout_weight="1"
                        android:text="necklace sets"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/mangalsutras"
                        android:text="mangalsutras"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />
                    <Button
                        android:id="@+id/bangle"
                        android:text="bangles &amp; Kadas"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:background="#998100"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <Button
                        android:id="@+id/tops"
                        android:text="Tops"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                    <Button
                        android:id="@+id/chain"
                        android:text="Chain &amp; Bracelets"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <Button
                        android:id="@+id/pendants"
                        android:text="Pendant sets"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                    <Button
                        android:id="@+id/watchbelt"
                        android:text="watchbelts"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="#998100"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <Button
                        android:id="@+id/hathpan"
                        android:text="hathpan"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:background="#998100"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                    <Button
                        android:id="@+id/chain_sets"
                        android:text="Chains sets"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:background="#998100"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</RelativeLayout>
